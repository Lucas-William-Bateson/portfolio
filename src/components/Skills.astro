---
type SkillGroup = { icon: string; title: string; items: string[] };
const { skills = [] as SkillGroup[] } = Astro.props as { skills?: SkillGroup[] };
---
<div class="grid gap-6 sm:grid-cols-2">
  {skills.map((s) => (
    <div>
      <div class="font-semibold text-white mb-2 flex items-center gap-2">
        <iconify-icon icon={s.icon} class="text-primary"></iconify-icon>
        <span>{s.title}</span>
      </div>
      <div class="flex flex-wrap gap-3">
        {s.items.map((i) => (<span class="tag-raw">#{i}</span>))}
      </div>
    </div>
  ))}
</div>
