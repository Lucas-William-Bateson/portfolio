---
const { name = 'Lucas Bateson', tagline = 'Developing at NAV IT' } = Astro.props as { name?: string; tagline?: string };
---
<section id="top" class="py-16">
  <div class="container-narrow grid gap-4">
    <h1 class="text-4xl sm:text-6xl font-bold leading-tight">{name}</h1>
    <p class="text-muted text-lg">{tagline}</p>
    <div class="flex items-center gap-3">
      <a href="#about" class="inline-flex items-center gap-2 px-3 py-2 rounded-xl border border-primary/40 bg-primary/15 text-primary font-semibold">Learn more</a>
      <span class="text-sm text-muted">frontend • backend • cloud</span>
    </div>
  </div>
</section>
